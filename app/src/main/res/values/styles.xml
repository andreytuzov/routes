<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Your theme -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>

        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <!--<item name="actionModeBackground">@color/colorActionMode</item>-->
    </style>

    <style name="MyBottomSheetStyle" parent="@style/BottomSheet"></style>

    <style name="TooltipLayoutStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">#AA091644</item>
        <item name="ttlm_elevation">10dp</item>
        <item name="ttlm_overlayStyle">@style/TooltipOverlayStyle</item>
        <item name="android:textAppearance">@style/TextAppearanceStyle</item>
    </style>

    <style name="TooltipOverlayStyle" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">@color/accent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="ttlm_duration">0</item>
        <item name="ttlm_repeatCount">0</item>
    </style>

    <style name="TextAppearanceStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="snackBar" parent="@style/SnackBar">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
