    <PreferenceCategory
        android:title="Время">
        <SwitchPreference
            android:key="@string/pref_name_actualtime"
            android:defaultValue="@string/pref_value_actualtime"
            android:disableDependentsState="true"
            android:title="Время"
            android:summaryOn="Текущее"
            android:summaryOff="Ручное"
            android:icon="@drawable/ic_preference_currenttime">
        </SwitchPreference>
        <EditTextPreference
            android:key="@string/pref_name_btime"
            android:defaultValue="@string/pref_value_btime"
            android:dependency="@string/pref_name_actualtime"
            android:title="Начальное время"
            android:inputType="time"
            android:icon="@drawable/ic_preference_btime">
        </EditTextPreference>
        <EditTextPreference
            android:key="@string/pref.name.etime"
            android:defaultValue="@string/pref.value.etime"
            android:title="Конечное время"
            android:inputType="time"
            android:icon="@drawable/ic_preference_etime">
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Поиск">
        <PreferenceScreen
            android:title="Выбор региона"
            android:icon="@drawable/ic_preference_region">
            <intent
                android:action="ru.railway.dc.routes.regionActivity">
            </intent>
        </PreferenceScreen>
        <EditTextPreference
            android:key="@string/pref.name.stationtime"
            android:defaultValue="@string/pref.value.stationtime"
            android:inputType="numberDecimal"
            android:title="Время на станции (в мин.)"
            android:summary="Для промежуточных станций"
            android:icon="@drawable/ic_preference_stationtime">
        </EditTextPreference>
        <Preference
            android:key="@string/pref.name.clearcash"
            android:title="Очистка кэша"
            android:icon="@drawable/ic_preference_clearcash">
        </Preference>
